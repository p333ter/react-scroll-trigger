    "url": "https://github.com/ppasmik/react-scroll-trigger/issues"
  },
  "homepage": "https://github.com/ppasmik/react-scroll-trigger#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
